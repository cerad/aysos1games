{# @CeradTourn/Layout.html.twig #}
{% extends '@CeradTourn/Base.html.twig' %}

{% block stylesheetsx %}
<link rel="stylesheet" href="{# asset('bundles/ceradtourns/css/tourns.css') #}" media="all" />
{% endblock %}

{% block layout_body %}
<div id="layout-body">

{% if cerad_tourn_show('layout_header') %}
{% block layout_header %}
<div id="layout-header">
    {% render(controller('CeradTournBundle:Tourn/TournHeader:render')) %}
</div>
{% endblock %}
{% endif %}

{% set referer = cerad_tourn_get_referer() %}

{% if 'local.zayso.org' in referer %}
<div id="droplinetabs1" class="droplinebar">
<ul >
  <li>
    <a href="{{ url('cerad_tourn_home') }}">Home</a>
  </li>
  <li><a href="{{ url('cerad_tourn_results_poolplay') }}">Pool Play</a>
    <ul>
      <li><a href="{{ url('cerad_tourn_schedule_list') }}">Schedule</a>
      </li>

      <li><a href="{{ url('cerad_tourn_results_poolplay') }}">Results</a>
        <ul>
          <a href="{{ path('cerad_tourn_results_poolplay', { 'div': 'AYSO_U16B_Core'}) }}">U16 Boys </a>
          <a href="{{ path('cerad_tourn_results_poolplay', { 'div': 'AYSO_U16G_Core'}) }}">U16 Girls</a>
          <a href="{{ path('cerad_tourn_results_poolplay', { 'div': 'AYSO_U19B_Core'}) }}">U19 Boys </a>
          <a href="{{ path('cerad_tourn_results_poolplay', { 'div': 'AYSO_U19G_Core'}) }}">U19 Girls</a>
        </ul>
      </li>
    </ul>
  </li>
  <li style="float:right"><a href="/s1games/"> </a></li>
</ul>
<hr/>
</div>

{% endif %}

{% if cerad_tourn_show('layout_userinfo') %}
{% block layout_userinfo %}
<div id="layout-userinfo">
    {% render(controller('CeradTournBundle:Tourn/TournUserInfo:render')) %}
</div>
{% endblock %}
{% endif %}

{% if cerad_tourn_show('layout_topmenu') %}
{% block layout_topmenu %}
<div id="layout-topmenu">
    {% render(controller('CeradTournBundle:Tourn/TournTopMenu:render')) %}
</div>
{% endblock %}
{% endif %}


<div id="layout-content">{% block content %}{% endblock %}</div>

</div>
{% endblock %} {# end body block #}
