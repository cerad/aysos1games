{# @CeradTourn/Schedule/Search/ScheduleSearchSearch.html.twig #}

{% if searchForm is defined  %}
{% set form = searchForm     %}
<div class="schedule-search">
<form
    id     = "cerad_tourn_schedule_search"
    class  = "cerad_tourn_schedule_search cerad_common_form1"
    action = "{{ path('cerad_tourn_schedule_list') }}"
    method = "POST" {{ form_enctype(form) }}
    novalidate
>
    <fieldset>
        {{ form_row(form.dates)          }}
        {{ form_row(form.levels)         }}
        {{ form_row(form.fields)         }}
        {{ form_row(form.numFilter)      }}
        {{ form_row(form.teamFilter)     }}
        {{ form_row(form.officialFilter) }}
    </fieldset>
    <fieldset>
        <div class="controls">
            <input type="submit" name="scheduleSearchSearch" value="Search Schedule" />
        </div>
    </fieldset>
{{ form_rest(form) }}
</form>
</div>
{% endif %}
