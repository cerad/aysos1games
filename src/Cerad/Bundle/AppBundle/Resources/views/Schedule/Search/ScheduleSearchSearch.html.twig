{# @CeradTourn/Schedule/Search/ScheduleSearchSearch.html.twig #}

{% if searchForm is defined  %}
{% set form = searchForm     %}
<div class="schedule-search">
<form
    id     = "cerad_tourn_schedule_search"
    class  = "cerad_tourn_schedule_search cerad_common_form1"
    action = "{{ path('cerad_tourn_schedule_list') }}"
    method = "POST" {{ form_enctype(form) }}
    novalidate
>
    <fieldset>
    <table>
      <tr>

      {% if form.programs is defined %}
      {% set items = form.programs %}
      <td>{% include '@CeradTourn/Schedule/ScheduleSearchCheckboxes.html.twig' %}</td>
      {% endif %}

      {% if form.genders is defined %}
      {% set items = form.genders %}
      <td>{% include '@CeradTourn/Schedule/ScheduleSearchCheckboxes.html.twig' %}</td>
      {% endif %}

      {% if form.ages is defined %}
      {% set items = form.ages %}
      <td>{% include '@CeradTourn/Schedule/ScheduleSearchCheckboxes.html.twig' %}</td>
    {% endif %}

      </tr>

      <tr>

      {% if form.fields is defined %}
      {% set items = form.fields %}
      <td colspan="4">{% include '@CeradTourn/Schedule/ScheduleSearchCheckboxes.html.twig' %}</td>
    {% endif %}

      </tr>

    </table>
    <div style="padding:0 2em; float: left;"><a href="{{ path('cerad_tourn_schedule_list', { '_format': 'xls'}) }}">Export to Excel</a></div>
    <div style="padding-right: 2em; float: left;"><a href="{{ path('cerad_tourn_schedule_list', { '_format': 'csv'}) }}"> Export to Text</a></div>

        <div class="controls">
            <input type="submit" name="ScheduleSearchSearch" value="Search Schedule" />
        </div>
    </fieldset>
{{ form_rest(form) }}

</form>
</div>
{% endif %}
