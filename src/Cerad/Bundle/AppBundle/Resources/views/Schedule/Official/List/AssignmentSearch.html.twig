{# @CeradApp/Schedule/Official/List/AssignmentSearch.html.twig #}

{% if searchForm is defined  %}
{% set form = searchForm     %}
<div class="schedule-search">
<form
    id     = "cerad_tourn_unassigned_matches_search"
    class  = "cerad_tourn_unassigned_matches_search cerad_common_form1"
    action = "{{ path('cerad_tourn_unassigned_matches_list') }}"
    method = "POST" {{ form_enctype(form) }}
    novalidate
>
    <fieldset>
    <table>
      <tr>
      {% if form.dow is defined %}
      {% set items = form.dow %}
      <td>{% include '@CeradTourn/Schedule/ScheduleSearchCheckboxes.html.twig' %}</td>
      {% endif %}

      {% if form.genders is defined %}
      {% set items = form.genders %}
      <td>{% include '@CeradTourn/Schedule/ScheduleSearchCheckboxes.html.twig' %}</td>
      {% endif %}

      {% if form.ages is defined %}
      {% set items = form.ages %}
      <td>{% include '@CeradTourn/Schedule/ScheduleSearchCheckboxes.html.twig' %}</td>
    {% endif %}
    
      {% if form.programs is defined %}
      {% set items = form.programs %}
      <td>{% include '@CeradTourn/Schedule/ScheduleSearchCheckboxes.html.twig' %}</td>
      {% endif %}

    </tr>

    <tr>
      {% if form.fields is defined %}
      {% set items = form.fields %}
      <td colspan="4">{% include '@CeradTourn/Schedule/ScheduleSearchCheckboxes.html.twig' %}</td>
      {% endif %}
    </tr>
    </table>
    {% set hrefLink = path(link, { '_format': 'xls'}) %}
    <div style="padding:0 2em; float: left;"><a href="{{ hrefLink }}">Export to Excel</a></div>

    {% set hrefLink = path(link, { '_format': 'csv'}) %}
    <div style="padding-right: 2em; float: left;"><a href="{{ hrefLink }}">Export to Text</a></div>

    <div class="controls" style="margin-right:40px; float: right;">
        <input type="submit" name="scheduleOfficialSearch" value="Search Schedule" />
    </div>
    </fieldset>

    <div class="controls" style="padding-top: 1em; padding-right: 2em; float: right;">
      <a href="{{ path('cerad_tourn_schedule_official_list') }}">Show All Match Assignments</a>
    </div>

<div style="display:none">
  {{ form_rest(form) }}
</div>
</form>
</div>
{% endif %}
